<resources>

  <!-- Base application theme. -->
  <style name="Tink_AppTheme" parent="Theme.MaterialComponents.Light">
    <!-- Customize your theme here. -->
  </style>

  <style name="TinkLinkUiStyle" parent="Theme.MaterialComponents.NoActionBar">
    <item name="tink_colorBackground">#ffffff</item>
    <item name="tink_colorSurface">#ffffff</item>
    <item name="tink_colorPrimary">#ff427783</item>
    <item name="tink_colorOnPrimary">#ffffff</item>
    <item name="tink_colorSecondary">#ff427783</item>
    <item name="tink_colorError">#ff0000</item>
    <item name="tink_colorWarning">#FEAF27</item>
    <item name="tink_textColorPrimary">#ff262626</item>
    <item name="tink_textColorPrimaryDisabled">#ffa7a7a7</item>
    <item name="tink_textColorSecondary">#ff808080</item>
    <item name="tink_textColorSecondaryDisabled">#ffa7a7a7</item>
    <item name="tink_textColorTertiary">#ff808080</item>
    <item name="tink_dividerColor">#eeeeee</item>
    <item name="tink_snackbarColor">#ff808080</item>
    <item name="tink_colorOnSnackBar">#ffffff</item>
    <item name="tink_rippleColor">#20444444</item>
    <item name="tink_buttonStyle">@style/Tink_ButtonStyle</item>
    <item name="tink_textButtonStyle">@style/Tink_TextButtonStyle</item>
  </style>

  <style name="Tink_ToolbarStyle">
    <item name="android:background">?tink_colorPrimary</item>
    <item name="android:textColorPrimary">?tink_colorOnPrimary</item>
    <item name="colorControlNormal">?tink_colorOnPrimary</item>
    <item name="colorControlHighlight">?tink_colorOnPrimary</item>
    <item name="colorControlActivated">?tink_colorOnPrimary</item>
    <item name="android:textColorHint">?tink_colorOnPrimary</item>
    <item name="android:fontFamily">@font/tink_font_regular</item>
  </style>

  <style name="Tink_TextInputLayoutStyle">
    <item name="textAppearanceCaption">@style/tink_micro</item>
    <item name="colorError">?tink_colorError</item>
    <item name="colorPrimary">?tink_colorPrimary</item>
    <item name="colorOnSurface">?tink_textColorSecondary</item>
    <item name="placeholderTextAppearance">@style/tink_hecto.secondary</item>
    <item name="hintTextAppearance">@style/tink_hecto.secondary</item>
  </style>

  <style name="Tink_TinkEditTextStyle">
    <item name="android:paddingStart">0dp</item>
    <item name="android:background">@android:color/transparent</item>
    <item name="hintTextAppearance">@style/tink_hecto.secondary</item>
    <item name="android:textColorHint">?tink_textColorSecondary</item>
    <item name="android:textAppearance">@style/tink_hecto</item>
    <item name="android:textColor">?tink_textColorPrimary</item>
  </style>

  <style name="Tink_MaterialAlertDialogStyle" parent="Theme.MaterialComponents.Dialog.Alert">
    <item name="colorSurface">?tink_colorSurface</item>
    <item name="colorPrimary">?tink_colorPrimary</item>
    <item name="colorOnSurface">?tink_textColorPrimary</item>
    <item name="android:textAppearance">@style/tink_mega</item>
  </style>

  <item name="tink_font_bold" type="font">@font/roboto_bold</item>
  <item name="tink_font_semi_bold" type="font">@font/roboto_medium</item>
  <item name="tink_font_regular" type="font">@font/roboto</item>

</resources>
